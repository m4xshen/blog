---
import GitHub from "../icons/GitHub.astro";
import LinkedIn from "../icons/LinkedIn.astro";
const today = new Date();
---

<footer
  class="mt-auto bg-[#0a0a0b] text-gray-400 pt-20 pb-12 flex text-sm justify-center items-center gap-4"
>
  <div class="flex flex-col items-center gap-5">
    &copy; {today.getFullYear()} Max Shen. All rights reserved.
    <div class="flex gap-5">
      <a
        href="https://github.com/m4xshen"
        class="fill-gray-400 hover:brightness-75 transition"
        aria-label="GitHub"
      >
        <GitHub />
      </a>
      <a
        href="https://www.linkedin.com/in/m4xshen"
        class="fill-gray-400 hover:brightness-75 transition"
        aria-label="LinkedIn"
      >
        <LinkedIn />
      </a>
    </div>
  </div>
</footer>
