---
import SpeedInsights from '@vercel/speed-insights/astro';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-[#0a0a0b] text-white">
  <head>
    <BaseHead
      title={title ? title + ' | ' + SITE_TITLE : SITE_TITLE}
      description={description ? description : SITE_DESCRIPTION}
    />
  </head>
  <body class="mx-5 xs:mx-10 sm:w-max sm:mx-auto flex flex-col min-h-screen">
    <Header />
    <main>
      <slot />
    </main>
    <script src="https://giscus.app/client.js"
            data-repo="m4xshen/m4xshen.dev"
            data-repo-id="R_kgDOIwxuSw"
            data-category="Announcements"
            data-category-id="DIC_kwDOIwxuS84CcRI1"
            data-mapping="pathname"
            data-strict="0"
            data-reactions-enabled="1"
            data-emit-metadata="0"
            data-input-position="bottom"
            data-theme="dark_tritanopia"
            data-lang="en"
            crossorigin="anonymous"
            async>
    </script>
    <Footer />
    <SpeedInsights />
  </body>
</html>
